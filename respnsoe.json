{
  "data": {
    "poddle": {
      "version": "1.0",
      "project": "axxesMarine",
      "type": "WEB_SERVICE",
      "appName": "axxess-marine-be",
      "health": {
        "comment": "health endpoint for this application",
        "default": "/api/v1/health"
      },
      "port": {
        "comment": "helath endpoint for this application",
        "default": 8080
      },
      "env": {
        "comments": "Allowed env configuration blocks: preview, staging, qa, production",
        "default": {
          "prod": {
            "branch": {
              "comment": "Branch name for this environment. For preview env branch shouldnt be specified",
              "default": "prod"
            },
            "entryPoint": {
              "comment": "File path pointing to entr point of the application",
              "default": "index.js"
            },
            "domain": {
              "comment": "Deployment URL. Shouldnt be specifed for non-production environments",
              "default": "api.poddleops.com"
            },
            "specs": {
              "compute": {
                "cpu": {
                  "default": 2,
                  "comment": "Value(Integer) must be one of: [1,2,4,8]"
                },
                "memory": {
                  "default": 2,
                  "comment": "Value(Integer) must be one of: [1,2,4,8]"
                },
                "storage": {
                  "default": 30,
                  "comment": "Value(Integer) must be atleast 30"
                },
                "autoScaling": {
                  "comment": "Shouldnt be specified for non-production environments",
                  "default": {
                    "replica": {
                      "min": {
                        "default": 1,
                        "comment": "Value(Integer) must be between 1 and "
                      },
                      "max": {
                        "default": 3,
                        "comment": "Value(Integer) must be between 3 and "
                      }
                    }
                  }
                }
              },
              "database": {
                "cpu": {
                  "default": 2,
                  "comment": "Value(Integer) must be one of: [1,2,4,8]"
                },
                "memory": {
                  "default": 2,
                  "comment": "Value(Integer) must be one of: [1,2,4,8]"
                },
                "storage": {
                  "default": 30,
                  "comment": "Value(Integer) must be atleast 30"
                },
                "engine": {
                  "default": "postgres",
                  "comment": "Value must be one of: [postgres, mysql, oracle]"
                },
                "version": {
                  "default": "16",
                  "comment": "Value must be one of: [14,15,16,16.0.2,17]"
                }
              }
            },
            "variables": {
              "comment": "Value(Integer) must be one of: [1,2,4,8]",
              "default": {
                "BASE_URL": "/api/v1",
                "DATABASE_URL": "#{dbUrl}",
                "DATABASE_PORT": "#{dbPort}",
                "DATABASE_USERNAME": "#{dbUsername}",
                "DATABASE_PASSWORD": "#{dbPassword}"
              }
            }
          }
        }
      }
    }
  }
}
